.Content-Main view {
  margin-top: 40px;
  text-align: center;
  font-size: 20px; 
  font-weight: 550;
  font-family:  Microsoft JhengHei;
  color: rgb(63, 57, 57);
}

.input{
  /* border: solid 1px rgb(78, 77, 77); */
  border: 1px solid darkgray;
  width: 450rpx;
  height: 36px;
  margin-top: 30px;
  font-size: 16px;
  
}

.chose-image {
  width: 160rpx;
  padding: 10rpx 0;
  border: 1rpx solid #ddd;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #8c8c8c;
  font-size: 28rpx;
  box-shadow:2px 2px 20px 0px rgb(161, 154, 154);
}


.chose-image image {
  width: 60rpx;
  height: 60rpx;
}

.image-list {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: start;

  flex-wrap: wrap;
}

.image-list .item {
  position: relative;
  padding: 15rpx;
}

.image-list .item image {
  width: 150rpx;
  height: 150rpx;
}

.Content-Main h1>span {
  display: block;
  font-size: 11px;
}

.Content-Main label {
  display: block;
  margin: 0px 0px 5px;
}

.Content-Main label>span {
  float: left;
  width: 20%;
  padding-right: 10px;
  margin-top: 10px;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-weight: bold;
  text-align: right;
  color: #333;
}

.Content-Main input[type="text"],
.Content-Main textarea {
  width: 70%;
  height: 20px;
  padding: 5px 0px 5px 5px;
  margin-bottom: 16px;
  margin-right: 6px;
  margin-top: 2px;
  line-height: 15px;
  border-radius: 4px;
  border: 1px solid #CCC;
  color: #888;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
  -moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
}

.select1 {
  width: 71%;
  height: 35px;
  margin-bottom: 16px;
  margin-right: 6px;
  margin-top: 2px;
  line-height: 15px;
  padding: 5px 0px 5px 5px;
  border-radius: 4px;
  border: 1px solid #CCC;
  color: #888;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
  -moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
}

.select2 {
  width: 13%;
  border-radius: 4px;
  border: 1px solid #CCC;
  color: #888;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
  -moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
}

.Content-Main textarea {
  width: 70%;
  height: 100px;
  padding: 5px 0px 0px 5px;
}

.button {
  padding: 10px 25px 10px 25px;
  margin-left: 111px;
  border-radius: 4px;
  border: 1px solid #CCC;
  background: #FFF;
  color: #333;
}

.button:hover {
  color: #333;
  background-color: #EBEBEB;
  border-color: #ADADAD;
}

.publish-btn {
 
  background-color: #80a1b8;
  color: #fff;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
